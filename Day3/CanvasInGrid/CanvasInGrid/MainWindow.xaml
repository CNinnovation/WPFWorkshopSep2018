<Window x:Class="CanvasInGrid.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CanvasInGrid"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Canvas Grid.Row="0" Background="Yellow" />
        <Canvas Grid.Row="1" Background="Red">
            <Ellipse Width="90" Height="90" Fill="Blue" Canvas.Left="20" Canvas.Top="40" />
        </Canvas>

        <Canvas  Grid.Row="2" Background="Green" />

    </Grid>
</Window>
