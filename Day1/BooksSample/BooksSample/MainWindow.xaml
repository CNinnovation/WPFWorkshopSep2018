<Window x:Class="BooksSample.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BooksSample"
        xmlns:models="clr-namespace:BooksSample.Models"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.Resources>
        <models:Book Title="Professional C# 7" Publisher="Wrox Press" BookdId="1" Isbn="34783478"  x:Key="theBook" />
    </Window.Resources>
    <Grid>
        <Button Width="120" Height="60" Content="{StaticResource theBook}" />
    </Grid>
</Window>
