<Window x:Class="BubblingSample.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BubblingSample"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel ButtonBase.Click="OnButtonClick">
            <Button Width="100" Height="50" Content="One" Click="OnButtonOneClick" />
            <Button  Width="100" Height="50" Content="Two" />
        </StackPanel>
        
    </Grid>
</Window>
